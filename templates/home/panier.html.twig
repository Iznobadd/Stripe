{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Nom de l'article</th>
            <th scope="col">Prix</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th>{{ product.name }}</th>
                <td>{{ product.price }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <h4 class="text-center">Prix total : {{ total }}</h4>
        <div class="text-center">
            <a href="{{ path('app_pay') }}" class="btn btn-primary">Payer</a>
        </div>
    </div>
{% endblock %}